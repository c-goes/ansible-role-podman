# See man 5 containers-storage.conf for more information
# The "container storage" table contains all of the server options.
[storage]
# Default Storage Driver
driver = "zfs"
graphroot = "/{{ containers_zfs_fs }}"
runroot = "/{{ containers_zfs_fs }}"

[storage.options]
mount_program = "/usr/sbin/zfs"

[storage.options.zfs]
fsname = "{{ containers_zfs_fs }}"
mountopt = "nodev"